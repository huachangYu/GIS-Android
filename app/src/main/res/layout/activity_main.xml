<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutLine0"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnZoomUp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/ZoomUp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnZoomDown"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/ZoomDown"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnRotate"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/Rotate"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnScaleBar"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/ScaleBar"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutLine1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <Button
                    android:id="@+id/btnUp"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="@string/up"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/btnLeft"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="@string/left"/>
                <Button
                    android:id="@+id/btnRight"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="@string/right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/btnDown"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="@string/down"/>
            </LinearLayout>
        </LinearLayout>

        <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>